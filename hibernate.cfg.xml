<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration">

<hibernate-configuration>
    <session-factory>
    
    	<property name="hibernate.connection.driver_class">org.mariadb.jdbc.Driver</property>
		<property name="connection.pool_size">1</property>
		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="show_sql">false</property> 
		<property name="hbm2ddl.auto">update</property>
		
		<!-- Entidades -->
		<mapping class="entities.PersonaBasica" />
		<mapping class="entities.Persona" />
		<mapping class="entities.Precio" />
		<mapping class="entities.Localidad" />
		<mapping class="entities.HistoriaEstadoProp" />
		<mapping class="entities.Inmobiliaria" />
		<mapping class="entities.Propiedad" />
		<mapping class="entities.Propietario" />
		<mapping class="entities.Foto" />
		<mapping class="entities.Telefono" />
		<mapping class="entities.Cliente" />
				
    </session-factory>
</hibernate-configuration>